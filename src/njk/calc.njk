      <label for="vehicle4">Levi's</label>
      <input type="checkbox" id="vehicle5" name="vehicle5" value="Urban Outfitters">
      <label for="vehicle5">Urban Outfitters</label>
      <input type="checkbox" id="vehicle6" name="vehicle6" value="Fashion Nova">
      <label for="vehicle6">Fashion Nova</label>
      <input type="checkbox" id="vehicle7" name="vehicle7" value="Gildan">
      <label for="vehicle7">Gildan</label>
      <input type="checkbox" id="vehicle8" name="vehicle8" value="Forever 21">
